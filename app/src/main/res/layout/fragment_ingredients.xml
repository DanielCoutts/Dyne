<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngredientsFragment">

    <!-- Main Content -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <!-- Pull image from database -->
                <ImageView
                    android:id="@+id/recipeImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/potroast1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/recipe_name_template"
                    android:layout_alignBottom="@+id/recipeImage"
                    android:layout_alignLeft="@+id/recipeImage"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    />

                <ImageButton
                    android:id="@+id/favouriteButton"
                    android:src="@drawable/favouritebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/recipeImage"
                    android:layout_alignBottom="@+id/recipeImage"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="32dp"
                    android:background="@null"
                    />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/infoRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/tile_margin"
                android:layout_marginTop="@dimen/tile_margin"
                >

                <!-- Update @string/serves with data from database -->
                <TextView
                    android:id="@+id/serves"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/serves"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:background="@color/cardview_dark_background"
                    android:layout_marginLeft="@dimen/tile_margin"
                    android:layout_marginRight="@dimen/tile_margin"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

                <!-- Update @string/cook_time with data from database -->
                <TextView
                    android:id="@+id/cookTime"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/cook_time"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:background="@color/cardview_dark_background"
                    android:layout_marginLeft="@dimen/tile_margin"
                    android:layout_marginRight="@dimen/tile_margin"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

                <!-- Update @string/difficulty with data from database -->
                <TextView
                    android:id="@+id/difficulty"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/difficulty"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:background="@color/cardview_dark_background"
                    android:layout_marginLeft="@dimen/tile_margin"
                    android:layout_marginRight="@dimen/tile_margin"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    />

            </LinearLayout>

            <GridLayout
                android:id="@+id/ingredients_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Use Java to import ingredients as needed by recipe -->

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
