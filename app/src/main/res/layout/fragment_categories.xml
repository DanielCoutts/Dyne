<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CategoriesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/card_margins">

        <!-- Breakfast -->
        <android.support.v7.widget.CardView
            android:id="@+id/category_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margins"
            android:elevation="@dimen/cardview_default_elevation"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/category_breakfast_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/categories_image_height" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding"
                    android:text="@string/breakfast"
                    android:textAlignment="center"
                    android:textSize="@dimen/large_card_text"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Lunch -->
        <android.support.v7.widget.CardView
            android:id="@+id/category_lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margins"
            android:elevation="@dimen/cardview_default_elevation"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/category_lunch_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/categories_image_height" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding"
                    android:text="@string/lunch"
                    android:textAlignment="center"
                    android:textSize="@dimen/large_card_text"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Starter -->
        <android.support.v7.widget.CardView
            android:id="@+id/category_starter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margins"
            android:elevation="@dimen/cardview_default_elevation"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/category_starter_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/categories_image_height" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding"
                    android:text="@string/starter"
                    android:textAlignment="center"
                    android:textSize="@dimen/large_card_text"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Main -->
        <android.support.v7.widget.CardView
            android:id="@+id/category_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margins"
            android:elevation="@dimen/cardview_default_elevation"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/category_main_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/categories_image_height" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding"
                    android:text="@string/main_course"
                    android:textAlignment="center"
                    android:textSize="@dimen/large_card_text"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Desserts -->
        <android.support.v7.widget.CardView
            android:id="@+id/category_desserts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margins"
            android:elevation="@dimen/cardview_default_elevation"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/category_desserts_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/categories_image_height" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding"
                    android:text="@string/dessert"
                    android:textAlignment="center"
                    android:textSize="@dimen/large_card_text"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Drinks -->
        <android.support.v7.widget.CardView
            android:id="@+id/category_drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margins"
            android:elevation="@dimen/cardview_default_elevation"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/category_drinks_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/categories_image_height" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding"
                    android:text="@string/drinks"
                    android:textAlignment="center"
                    android:textSize="@dimen/large_card_text"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- Vegetarian -->
        <android.support.v7.widget.CardView
            android:id="@+id/category_veg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margins"
            android:elevation="@dimen/cardview_default_elevation"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/category_veg_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/categories_image_height" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/card_padding"
                    android:text="@string/vegetarian"
                    android:textAlignment="center"
                    android:textSize="@dimen/large_card_text"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>