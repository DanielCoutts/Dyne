                        android:text="@string/guide2_s2i1"
                        android:id="@+id/guide2_s2i1"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/guide2_s2i2"
                        android:layout_below="@id/guide2_s2i1"
                        android:id="@+id/guide2_s2i2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/guide2_s2i3"
                        android:layout_below="@id/guide2_s2i2"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!--guide1_s3-->
